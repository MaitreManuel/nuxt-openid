{
  "name": "nuxt-openid",
  "version": "0.10.0",
  "description": "OpenID-Connect (OIDC) integration module for Nuxt",
  "keywords": [
    "nuxt",
    "openid",
    "oidc",
    "module",
    "nuxt 3",
    "nuxt 4",
    "auth"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaitreManuel/nuxt-openid.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build --stub && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "pub": "npm publish --access public"
  },
  "dependencies": {
    "@nuxt/kit": "^3.20.0",
    "defu": "^6.1.4",
    "openid-client": "^5.7.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nuxt/module-builder": "^1.0.2",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@types/node": "^24.10.0",
    "brace-expansion": "^1.1.12",
    "eslint": "^8.57.1",
    "nuxt": "^3.20.0",
    "typescript": "^5.9.3"
  },
  "bugs": {
    "url": "https://github.com/MaitreManuel/nuxt-openid/issues"
  },
  "homepage": "https://github.com/MaitreManuel/nuxt-openid#readme",
  "author": "MaitreManuel"
}
